@using Iwentys.Models.Transferable.Guilds

@namespace Iwentys.Endpoints.WebUi.CustomComponents.Guild.Profile

<div class="text-center card">
    <h3>Рейтинг гильдии - @GuildProfile.MemberLeaderBoard.TotalRate</h3>
    <MatList>
        @foreach (var member in GuildProfile.MemberLeaderBoard.MembersImpact)
        {
            <MatListItem>
                @member.Username (@member.TotalRate)
            </MatListItem>
        }
    </MatList>
</div>

@code {
    [Parameter]
    public GuildProfileDto GuildProfile { get; set; }
}