@using Iwentys.Models.Transferable.Guilds
@using Iwentys.Models

<div class="text-center">
    <h3>Репозитории</h3>

    <div class="container-fluid d-flex flex-column">
        @foreach (GithubRepository repository in GuildProfile.PinnedRepositories)
        {
            <MatNavItem href=@repository.Url class="d-flex flex-row guild-rating-row justify-content-md-between">
                <div class="col-md-10">
                    <h4>@repository.Name</h4>

                    <p href="guild">@repository.Description</p>
                </div>
                
                @*TODO: add icon-button*@
                <MatButton class="col-md-2">X</MatButton>
            </MatNavItem>
        }
    </div>
    
    <MatButton>Запинить</MatButton>
</div>

@code {
    [Parameter]
    public GuildProfileDto GuildProfile { get; set; }
}