@using Iwentys.Features.Tributes.Models

@inject NavigationManager NavigationManagerClient

<div class="card-list-element">
    <MatCard Class="dark-elevation-02">
        <MatCardContent>
            <div class="card-list-element-content">
                <MatHeadline6>
                    @Tribute.Project.Name (by @Tribute.Project.AuthorUsername)
                </MatHeadline6>
                <MatHeadline6>
                    @Tribute.CreationTimeUtc
                </MatHeadline6>
                @if (Tribute.Mark is not null)
                {
                    <MatHeadline6>
                        Mark: @Tribute.Mark (review by @Tribute.Mentor.GithubUsername)
                    </MatHeadline6>
                }
                @*TODO: last update time*@
            </div>
        </MatCardContent>
        <MatCardActions>
            <MatButton OnClick=@Complete>Complete</MatButton>
        </MatCardActions>
    </MatCard>
</div>

@code {
    [Parameter]
    public TributeInfoResponse Tribute { get; set; }
}
