@page "/raids"

@using Iwentys.Features.Raids.Models
@inherits DependencyInjectionPage

<h3>RaidJournalPage</h3>
<MatButton Link="/raids/create">Create new raid</MatButton>

<div class="container-fluid d-flex">
    <div class="d-flex flex-column">
        @if (_raids is not null)
        {
            <div class="container-fluid d-flex flex-column">
                @foreach (RaidProfileDto raid in _raids)
                {
                    <div class="card-list-element">
                        <MatCard Class="dark-elevation-02">
                            <MatCardContent>
                                <div class="card-list-element-content">
                                    <MatHeadline6>
                                        @raid.Title
                                    </MatHeadline6>
                                    <MatBody2>
                                        @raid.Description
                                    </MatBody2>
                                </div>
                            </MatCardContent>
                            <MatCardActions>
                                <MatButton Link=@LinkToRaidProfile(raid)>Open</MatButton>
                            </MatCardActions>
                        </MatCard>
                    </div>
                }
            </div>
        }
    </div>
</div>