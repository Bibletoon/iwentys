@page "/tournaments"

@using Blazored.LocalStorage

@inject HttpClient Http
@inject ILocalStorageService LocalStorage

<h3>Tournaments</h3>
<MatButton Link="/tournaments/create/code-marathon">Create code marathon</MatButton>
<div class="container-fluid d-flex">
    <div class="d-flex flex-column">
        @if (_tournaments is not null)
        {
            <div class="container-fluid d-flex flex-column">
                @foreach (var tournament in _tournaments)
                {
                    <div class="card-list-element">
                        <MatCard Class="dark-elevation-02">
                            <MatCardContent>
                                <div class="card-list-element-content">
                                    <MatHeadline6>
                                        @tournament.Name
                                    </MatHeadline6>
                                    <MatBody2>
                                        @tournament.Description
                                    </MatBody2>
                                </div>
                            </MatCardContent>
                            <MatCardActions>
                                <MatButton Link=@LinkToTournamentProfile(tournament)></MatButton>
                            </MatCardActions>
                        </MatCard>
                    </div>
                }
            </div>
        }
    </div>
</div>

