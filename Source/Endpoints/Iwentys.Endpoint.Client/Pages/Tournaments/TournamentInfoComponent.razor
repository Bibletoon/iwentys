@inherits DependencyInjectionPage

@using Iwentys.Features.Guilds.Tournaments.Models

<div class="card-list-element">
    <MatCard Class="dark-elevation-02">
        <MatCardContent>
            <div class="card-list-element-content">
                <MatHeadline6>
                    @Tournament.Name
                </MatHeadline6>
                <MatBody2>
                    @Tournament.Description
                </MatBody2>
            </div>
        </MatCardContent>
        <MatCardActions>
            <MatButton Link=@LinkToTournamentProfile(Tournament)>Open</MatButton>
        </MatCardActions>
    </MatCard>
</div>

@code {
    [Parameter]
    public TournamentInfoResponse Tournament { get; set; }
}
