@page "/quest/response/{QuestId:int}"

@inherits DependencyInjectionPage

<div class="col-md-6 d-flex flex-column">
    <h3>QuestResponseCreatePage</h3>

    @if (_quest is not null)
    {
        <MatHeadline6>
            @_quest.Title (@_quest.Price)
        </MatHeadline6>
        <MatBody1>
            @_quest.Description
        </MatBody1>

        <p>
            <MatTextField @bind-Value="@_description" Label="Description" Class="input-element"></MatTextField>
        </p>
        <MatButton OnClick="@SendResponse">Send response</MatButton>
    }
</div>

@code {
    [Parameter]
    public int QuestId { get; set; }
}
