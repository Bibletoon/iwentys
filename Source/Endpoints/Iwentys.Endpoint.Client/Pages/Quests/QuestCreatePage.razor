@page "/quest/create"

@inherits DependencyInjectionPage

<div class="col-md-6 d-flex flex-column">
    <h5>Create quest</h5>

    <p>
        <MatTextField @bind-Value="@_title" Label="Title"></MatTextField>
    </p>

    <p>
        <MatTextField @bind-Value="@_description" Label="Description"></MatTextField>
    </p>

    <p>
        <MatTextField @bind-Value="@_price" Label="Price"></MatTextField>
    </p>

    <p>
        <MatDatePicker @bind-Value="@_deadline"></MatDatePicker>
        <MatButton OnClick="@(_ => { _deadline = null;})">
            Clean
        </MatButton>
    </p>

    <MatButton OnClick="@SendCreateRequest">Create</MatButton>
</div>

