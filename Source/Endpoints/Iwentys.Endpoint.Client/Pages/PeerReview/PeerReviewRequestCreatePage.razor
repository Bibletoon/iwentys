@page "/peer-review/create"

@inherits DependencyInjectionPage

<h3>PeerReviewRequestCreatePage</h3>

@if (_availableForReviewProject is not null)
{
    <p>Select project</p>
    <p>
        <MatSelectItem @bind-Value="@_selectedProject" Items="@_availableForReviewProject" Class="input-element">
            <ItemTemplate>
                @if (context is not null)
                {
                    <span>@context.Owner/@context.Name</span>
                }
            </ItemTemplate>
        </MatSelectItem>
    </p>

    <MatButton OnClick=@(async () => await CreateRequest())>Create</MatButton>
}

