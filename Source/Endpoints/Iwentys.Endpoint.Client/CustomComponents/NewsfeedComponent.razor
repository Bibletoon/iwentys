@using Iwentys.Features.Newsfeeds.Models

@namespace Iwentys.Endpoint.Client.CustomComponents

<div class="container-fluid d-flex flex-column">
    <MatHeadline5>Анонсы</MatHeadline5>
    @foreach (NewsfeedViewModel newsfeed in Newsfeeds)
    {
        <MatCard>
            <MatCardContent>
                <MatHeadline6>
                    @newsfeed.Title
                </MatHeadline6>
                <MatBody1>
                    @newsfeed.Content
                </MatBody1>
                <MatBody2>
                    @newsfeed.CreationTimeUtc
                </MatBody2>
            </MatCardContent>
        </MatCard>
    }
</div>

@code
{
    [Parameter]
    public List<NewsfeedViewModel> Newsfeeds { get; set; }
}
